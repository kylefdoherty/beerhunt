<div class="panel-body">
  <div class="row">
    <div class="col-md-2">
      <%= image_tag("http://placehold.it/140x100") %>
      <% if current_user.admin? %>
        <div class="beer-icons">
          <%= link_to beer_path(beer), method: :delete, class: "delete-beer" do %>
            <%= fa_icon "trash-o"%>
          <% end %>
          <%= link_to edit_beer_path(beer), remote: true, class: "edit-beer" do %>
            <%= fa_icon "pencil-square-o"%>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-md-10">
      <h4><%= beer.name %></h4>
      <h5>Brewery: Some Brewery</h5>
      <h5>From: Some City</h5>
      <h5>ABV: 10%</h5>
      <p><%= beer.description %></p>
    </div>
  </div>
</div>
