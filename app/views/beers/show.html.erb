<%= render partial: "beer_panel", locals: { beer: @beer } %>
<div class="comments-container">
  <h3>Discussion</h3>
  <div class="add-comment">
    <%= render partial: "beers/comments/add_comment", locals: { beer: @beer, comment: @comment } %>
  </div>
  <div id="beer-<%= @beer.id %>-comments" class="comments-list">
    <%= render partial: "beers/comments/comments_index", locals: { comments: @beer.comments } %>
  </div>
</div>
