<div class="beer-<%= @beer.id %> beer-container">
  <div class="beer-info">
    <div class="beer-img">
      <%= cl_image_tag(@beer.image_id, :crop => :fill, :width => 250, :height => 250) %>
      <%= render partial: "action_buttons", locals: { beer: @beer } %>
    </div>
    <div class="beer-details">
      <h3><%= @beer.name %></h3>
      <h4>Brewery: <%= @beer.brewery %></h4>
      <h5>ABV: <%= @beer.abv %></h5>
      <p><%= @beer.description %></p>
      <p>Photo: </p>
    </div>
  </div>
  <div class="comments-container">
    <h3>Discussion</h3>
    <div class="add-comment">
      <%= render partial: "beers/comments/add_comment", locals: { beer: @beer, comment: @comment } %>
    </div>
    <div id="beer-<%= @beer.id %>-comments" class="comments-list">
      <%= render partial: "beers/comments/comments_index", locals: { comments: @beer.comments } %>
    </div>
  </div>
</div>
